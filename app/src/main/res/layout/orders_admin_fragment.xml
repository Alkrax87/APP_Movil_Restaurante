<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orderbg">

        <EditText
            android:id="@+id/txtImgName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_upload"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nombre de Imagen"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#141E27"
            android:textColorHint="#B3B3B3"
            app:layout_constraintEnd_toEndOf="@+id/txtDescription"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtPriceAdd"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceAdd"
            app:layout_constraintWidth_percent=".6" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style"
            android:backgroundTint="#ED6E33"
            android:drawableLeft="@drawable/add"
            android:onClick="editar"
            android:paddingLeft="55dp"
            android:text="Agregar"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="./Agregar"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_list2"
            android:drawablePadding="10dp"
            android:text="Agregar"
            android:textColor="#fff"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


        <EditText
            android:id="@+id/txtNameFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_food"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nombre del Plato"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#141E27"
            android:textColorHint="#B3B3B3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/txtPriceAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_money"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Precio s/"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#141E27"
            android:textColorHint="#B3B3B3"
            app:layout_constraintEnd_toEndOf="@+id/txtDescription"
            app:layout_constraintStart_toStartOf="@+id/txtDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/custom_filter"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="center|start"
            android:hint="DescripciÃ³n"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#141E27"
            android:textColorHint="#B3B3B3"
            app:layout_constraintEnd_toEndOf="@+id/txtNameFood"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="@+id/txtNameFood"
            app:layout_constraintTop_toBottomOf="@+id/txtNameFood"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_style"
            android:backgroundTint="#ED6E33"
            android:drawableStart="@drawable/ic_baseline_file_upload_24"
            android:gravity="center"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="@+id/txtPriceAdd"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtImgName"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceAdd" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#fff"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtImgName">

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/testimg"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="435dp" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>